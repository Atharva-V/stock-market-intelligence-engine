# Scraper Configuration
SCRAPER_HEADLESS=false
SCRAPER_TIMEOUT=30
SCRAPER_RATE_LIMIT=2
SCRAPER_USER_AGENTS_FILE=src/resources/user_agents.txt

# Data Collection
TARGET_TWEET_COUNT=2000
SEARCH_KEYWORDS=#nifty50,#sensex,#intraday,#banknifty
TWEET_COLLECTION_HOURS=24

# Storage
DATA_OUTPUT_PATH=data/raw
PROCESSED_DATA_PATH=data/processed
OUTPUT_PARQUET_PATH=output/market_data.parquet

# Analysis
TFIDF_MAX_FEATURES=1000
MIN_SIGNAL_CONFIDENCE=0.6
VISUALIZATION_SAMPLE_SIZE=500

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/market_intelligence.log
